{
  "name": "highpoint-fullstack",
  "version": "1.0.0",
  "main": "server/index.js",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "express": "^4.16.3",
    "nodemailer": "^4.6.7",
    "nodemon": "^1.18.3"
  },
  "scripts": {
    "dev": "nodemon server/index.js",
    "start": "node server/index.js",
    "deploy-prod": "cd app && yarn build && cd ../ && now && npm run alias",
    "deploy-test": "cd app && yarn build && cd ../ && now",
    "alias": "now alias"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "now": {
    "name": "Highpoint Property Group",
    "alias": [
      "highpoint-property-group.now.sh"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^1.0.0-rc.14",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0"
  }
}
